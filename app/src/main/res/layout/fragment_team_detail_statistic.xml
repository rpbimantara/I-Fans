                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Offensive"
                    android:gravity="center"
                    android:textColor="@color/colorTrueState"
                    android:textSize="20sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30sp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="130sp"
                        android:layout_height="30sp"
                        android:layout_marginLeft="20sp"
                        android:text="Goal Kick"
                        android:textColor="@color/colorTrueState"
                        android:textSize="20sp"/>

                    <ProgressBar
                        android:id="@+id/progressBarGoalKick"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:progressBackgroundTint="@color/colorPrimary"
                        android:layout_weight="1" />
                    <TextView
                        android:id="@+id/txt_GoalKick"
                        android:layout_width="50sp"
                        android:layout_height="30sp"
                        android:layout_marginRight="20sp"
                        android:text="0"
                        android:gravity="center"
                        android:textColor="@color/colorTrueState"
                        android:textSize="20sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30sp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="130sp"
                        android:layout_height="30sp"
                        android:layout_marginLeft="20sp"
                        android:text="Goal"
                        android:textColor="@color/colorTrueState"
                        android:textSize="20sp"/>

                    <ProgressBar
                        android:id="@+id/progressBarGoal"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:progressBackgroundTint="@color/colorPrimary"
                        android:layout_weight="1" />
                    <TextView
                        android:id="@+id/txt_Goal"
                        android:layout_width="50sp"
                        android:layout_height="30sp"
                        android:layout_marginRight="20sp"
                        android:text="0"
                        android:gravity="center"
                        android:textColor="@color/colorTrueState"
                        android:textSize="20sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30sp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="130sp"
                        android:layout_height="30sp"
                        android:layout_marginLeft="20sp"
                        android:text="Possession Loss"
                        android:textColor="@color/colorTrueState"
                        android:textSize="20sp"/>

                    <ProgressBar
                        android:id="@+id/progressBarPossessionLoss"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:progressBackgroundTint="@color/colorPrimary"
                        android:layout_weight="1" />
                    <TextView
