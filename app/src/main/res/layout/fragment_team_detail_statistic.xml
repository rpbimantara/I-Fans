                        android:textColor="@color/colorTrueState"
                        android:textSize="20sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30sp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="130sp"
                        android:layout_height="30sp"
