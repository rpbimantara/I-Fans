                        android:layout_marginRight="20sp"
                        android:text="0"
                        android:gravity="center"
                        android:textColor="@color/colorTrueState"
                        android:textSize="20sp" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Passing"
                    android:gravity="center"
                    android:textColor="@color/colorTrueState"
                    android:textSize="20sp" />

                <LinearLayout
