                    android:layout_height="30sp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="130sp"
                        android:layout_height="30sp"
                        android:layout_marginLeft="20sp"
                        android:text="Passes"
                        android:textColor="@color/colorTrueState"
                        android:textSize="20sp"/>

                    <ProgressBar
